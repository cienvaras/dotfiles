# focus window
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

# set insertion point in focused container
ctrl + alt - a : yabai -m window --insert west
ctrl + alt - s : yabai -m window --insert south
ctrl + alt - w : yabai -m window --insert north
ctrl + alt - d : yabai -m window --insert east

# spaces
ctrl + alt - c : yabai -m space --create && \
                   index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                   yabai -m window --space "${index}" && \
                   yabai -m space --focus "${index}"

ctrl + alt - x : yabai -m space --destroy
ctrl + alt - n : yabai -m space --create 

# Move to space
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

# zoom window
ctrl + alt - return : yabai -m window --toggle zoom-fullscreen

# rotate windows
# rotate tree
ctrl + alt - 0x2B : yabai -m space --rotate 90
ctrl + alt - 0x2F : yabai -m space --rotate 270

# Move window.
ctrl + alt + cmd - h : yabai -m window --space prev && yabai -m space --focus prev
ctrl + alt + cmd - l : yabai -m window --space next && yabai -m space --focus next

# Move between screens.
ctrl + alt - left : yabai -m display --focus prev
ctrl + alt - right : yabai -m display --focus next

# Change layout.
ctrl + alt - b : yabai -m space --layout bsp
ctrl + alt - f : yabai -m space --layout float

# Balance windows.
ctrl + alt - 0 : yabai -m space --balance
